<body>
  <div class="container">
  
  <h1 style="text-align: center;">Quản Lý Tài Khoản Nhân Viên</h1>
  <hr>
  </br>
  <div>
      <form action="" method="post">
          <input type="text" name="displayName" placeholder="Tên Đăng Nhập"  class= "form-control actt">
          <br>
          <input type="text" name="username" placeholder="Tên Nhân Viên" class= "form-control actt">
          <br>
          <input type="password" name="password" placeholder="Mật khẩu" class= "form-control actt">
      <br>
          <button style="margin-left:26vw;margin-right:11vw;" type="submit" id = "submit" class="btn btn-primary mb-2">Thêm Thành Viên</button>
        
      </form>
      <br>
  </div>
  <div>
  <table class="table table-striped table-dark">
      <thead>
        <hr>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">Họ và Tên</th>
          <th scope="col">Thao tác</th>
        </tr>
      </thead>
      <tbody>
          <% users.forEach(function(user){ %>
        <tr>
          <th scope="col"><%= user.email %> </th>
          <th scope="col"><%= user.displayName %></th>
          <th scope="col"> <a href="adminAccount/<%=user.email%>/reset" style="margin-right:3vw">Reset password</a> 
          <% if(user.block === false){ %> 
          <a href="adminAccount/<%=user.email%>/block">Khóa account</a>
          <% } else { %>
          <a href="adminAccount/<%=user.email%>/unblock">Mở account</a>
          <% }%>
          </th>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  </div>
</body>
   
</div>

<%- include ('templatefooter.ejs') -%> 

<style>
  .actt
  {
    width: 50vw;
    margin-left: auto;
    margin-right: auto;

  }
    
  
</style>